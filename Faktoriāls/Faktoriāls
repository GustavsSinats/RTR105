#include <stdio.h>
#include <limits.h>
int main ()
{
char datu_tips;
double skaitlis;

printf("Ievadi decimālu skaitli: ");
scanf("%lf", &skaitlis);
printf("Izvēlies datu tipu ar kuru rēķināt faktoriālu (char, int vai long long): \n");
scanf("%c", &datu_tips);


long long result = 1;
int i = 1;

while (i <= skaitlis && result <= LLONG_MAX) {
    result *= i;
    i++;
  }

  if (i <= skaitlis) {
    printf("faktoriālu nav iespējams aprēķināt ar izvēlēto datu tipu \n");
  } else {
    printf("Faktoriāls no ievadītā skaitļa ir : %lld.\n",result);
  }

  return 0;
}



